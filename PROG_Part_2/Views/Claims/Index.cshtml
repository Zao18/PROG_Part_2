@model IEnumerable<PROG_Part_2.Models.Claims>

@{
    ViewData["Title"] = "Claims Index";
}

<h2>Submitted Claims</h2>
<table class="table">
    <thead>
        <tr>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Additional Notes</th>
            <th>File</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.AdditionalNotes</td>
                <td>@claim.DocumentName</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="SubmitClaim" asp-controller="Claims">Create New Claim</a>