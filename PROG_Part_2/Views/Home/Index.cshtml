@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" style="margin-top: 50px;">
    <h1 class="display-4" style="font-family: Arial, sans-serif; color: #2c3e50;">Welcome to Lecturer Claim System</h1>

    <div style="margin-top: 40px;">
        <a asp-action="SubmitClaim" asp-controller="Claims"
           style="padding: 15px 30px; background-color: #007bff; color: white; text-decoration: none; border-radius: 8px; font-size: 18px; margin-right: 20px;">
            Make a Claim
        </a>

        <a asp-action="LecturerHistory" asp-controller="Updates"
           style="padding: 15px 30px; background-color: #28a745; color: white; text-decoration: none; border-radius: 8px; font-size: 18px;">
            View Claim Status
        </a>
    </div>
</div>
