@model IEnumerable<PROG_Part_2.Models.Claims>

@{
    ViewData["Title"] = "Pending Claims";
}

<h2>Pending Claims for Approval</h2>
<table class="table">
    <thead>
        <tr>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Additional Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.AdditionalNotes</td>
                <td>@claim.DocumentName</td>
                <td>
                    <form asp-action="ApproveClaim" method="post">
                        <input type="hidden" name="id" value="@claim.ClaimId" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form asp-action="RejectClaim" method="post" style="display:inline-block;">
                        <input type="hidden" name="id" value="@claim.ClaimId" />
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

